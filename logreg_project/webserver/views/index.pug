extends layout

block content
  //- div(id="form-container" class="flex flex-col justify-center items-center")
  div(id='container' class='w-1/2 m-auto font-typewriter bg-telegram-yellow')
    h1(class='text-3xl font-bold tracking-tight text-gray-900')= title
    p Welcome to #{title}
    div(id="form-container" class="grid grid-cols-2 gap-4")
      each feature in features
        div(id='input')
          p #{feature}
          input(type="number" step=0.01 class="bg-telegram-yellow border-solid border-b-[3px] border-black")
      button(id="post_feature_values", type="button", value="Submit", onclick="postFeatureValues()") Submit
  
